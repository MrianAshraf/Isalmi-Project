<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home">

    <ImageView
        android:id="@+id/besm_im"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/hadeth_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        app:layout_constraintHeight_percent="0.3"
        />
    <View
        android:id="@+id/dec1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gold"
        app:layout_constraintTop_toBottomOf="@id/besm_im"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dec1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="الأحاديث"
        android:textSize="26sp"
        />
    <View
        android:id="@+id/dec2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gold"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_margin="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/HadethRecyclarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dec2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        />

</androidx.constraintlayout.widget.ConstraintLayout>